<div class="row">
  <div class="login-card">
    <h2>Create An Account</h2>
    <form>
      <div>
        <label for="signup-email">Email:</label>
        <input type="text" id="signup-email" value="example@site.com" />
      </div>
      <div>
        <label for="signup-password">Choose a password:</label>
        <input
          class="form-input"
          type="password"
          id="signup-password"
          value="must be at least 8 characters"
        />
      </div>
      <div>
        <label for="signup-name">First name:</label>
        <input type="text" id="signup-name" value="enter name" />
      </div>
      <div>
        <label for="signup-location">City:</label>
        <input type="text" id="signup-location" value="Portland" />
      </div>
      <div>
        <button type="submit">create account</button>
      </div>
    </form>
  </div>
</div>