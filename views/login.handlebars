<div class="row">
  <div class="login-card">
    <p>Already a user?</p>
    <h2>Login</h2>
    <form>
      <div>
        <label for="login-name">First Name:</label>
        <input type="text" id="login-name" />
      </div>
      <div>
        <label for="login-location">Location:</label>
        <input class="form-input" type="text" id="login-location" />
      </div>
      <div>
        <label for="login-email">Email:</label>
        <input type="text" id="login-email" />
      </div>
      <div>
        <label for="login-password">Password:</label>
        <input class="form-input" type="password" id="login-password" />
      </div>
      <div>
        <button id="loginBtn" class="button-primary" type="submit">login</button>
      </div>
    
      <div>
        Don't have an account?
        <button id="createBtn" class="button-secondary">Create Account</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>