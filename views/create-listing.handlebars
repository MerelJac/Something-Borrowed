<div class="listing card">
  <div class="card-header">
    <h2>Create New Listing</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label class="form-label" for="post-title">Title</label>
    <input
      type="text"
      name="post-title"
      class="form-input"
      value="enter title"
    />
    <label class="form-label" for="post-desc">Description</label>
    <textarea
      name="post-desc"
      class="form-input"
      aria-valuemax="maxiumum 300 characters"
    ></textarea>
    <label class="form-label" for="post-category">Choose category</label>
    <select id="category-select" name="post-category">
      {{#each categories as |category|}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
    <button type="submit" class="button">Create Listing</button>
  </form>
</div>