{{#if loggedIn}}
  <div class="listing card">
    <div class="card-header">
      <h2>Create New Listing</h2>
    </div>
    <form id="new-post-form" class="card-body">
      <div class="input-section">
        <label class="form-label" for="post-title">Title</label>
        <input
          type="text"
          name="post-title"
          id="item-title"
          class="form-input"
          placeholder="Enter title"
        />
      </div>

      <div class="input-section">
        <label class="form-label" for="post-desc">Description</label>
        <textarea
        rows="6"
          name="post-desc"
          class="form-input"
          id="item-description"
          aria-valuemax="maxiumum 300 characters"
        ></textarea></div>

      <div class="input-section">
        <label class="form-label" for="post-location">Location</label>
        <input
          name="post-location"
          class="form-input"
          id="item-Location"
          placeholder="Zip Code"
          aria-valuemax="maxiumum 5 characters"
        ></input></div>

      <div class="input-section">
        <p>Add an item image:</p>
        <button class="cloudinary-button" id="search">Search File</button>
      </div>

      <div class="input-section">
        <label class="form-label" for="post-category">Choose category</label>
        <select id="category-select" name="post-category">
          {{#each categories as |category|}}
            <option id="item-category" value="{{id}}">{{name}}</option>
          {{/each}}
        </select></div>

      <button id="create-btn" type="submit" class="btn primary-btn">Create
        Listing</button>
    </form>
  </div>
{{else}}
  <p>Log in to post an item!</p>
{{/if}}

<script
  src="https://upload-widget.cloudinary.com/global/all.js"
  type="text/javascript"
></script>
<script src="/js/create.js"></script>