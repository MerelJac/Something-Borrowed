<link
  rel="stylesheet"
  href="https://cdn-uicons.flaticon.com/uicons-solid-straight/css/uicons-solid-straight.css"
/>
<section class="page-container">
  <div class="listings-grid">
    <div>
      <h2>Welcome, {{user.first_name}}!</h2>
      <p class="filter-text">Your Listings:</p>
    </div>
    <div id="my-list-contain">
      {{#each myItems as |item|}}
        <article id="my-article">
          <input type="hidden" name="item-id" value="{{id}}" />
          <div class="listing-hero">
            <a href="/item/{{id}}">
              <img src="{{image}}" alt="{{title}}" />
            </a>
          </div>
          <div class="card-details listing-details container-shadow">
            <h2>
              <a href="/item/{{id}}">{{title}}</a>
            </h2>
            {{#if isAvailable}}{{else}}
              <p class="badge available-badge">Lending</p>
            {{/if}}
            <p class="card-desc">{{description}}</p>
            <div class="listing-buttons">
              {{#if isAvailable}}
                <p>Currently lending this to someone?</p>
                <button class="btn primary-btn lend-btn">Lending Item</button>
              {{else}}
                <p>No longer lending this item?</p>
                <button class="btn secondary-btn avail-btn">Item Available</button>
              {{/if}}
              <div class="edit-del-btns">
                <a href="/edit-listing/{{id}}" class="btn orange-btn"><span
                    class="my-icon"
                    style="font-size: 16px; color: #ffffff;"
                  ><i class="fi fi-ss-select"></i></span>
                  Edit</a>
                <a class="btn orange-out-btn delete-btn" id="delete-btn"><span
                    class="my-icon"
                    style="font-size: 16px"
                  ><i class="fi fi-br-trash"></i></span>Delete listing</a>
              </div>
            </div>
          </div>
        </article>
      {{/each}}
    </div>

  </div>
</section>

<script src="/js/pending.js"></script>
<script src="/js/delete.js"></script>